<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<title>2 Column Fixed Liquid CSS Layout</title>
<style type='text/css'>
.wrapper{
   width: 100%;
   margin: 0 auto;
}
.header{
   float: left;
   width: 100%;
   background-color: #f4f4f4
}
.wrapright{
   float: left;
   width: 100%;
   background-color: #cfcfcf
}
.right{
   margin-left: 252px;
   background-color: #afeeee;

}
.left{
   float: left;
   width: 242px;
   margin-left: -100%;
   background-color: #98fb98;

}
.footer{
   float: left;
   width: 100%;
   background-color: #f4f4f4;
}
body {
   padding: 0px;
   margin: 0px;
}
</style>
</head>
<body>
<div class="wrapper">
    <div class="header">
        header
    </div>
    <div class="wrapright">
        <div class="right">
            <p>right liquid</p>
            <p>right liquid</p>
            <p>right liquid</p>
            <p>right liquid</p>
            <p>right liquid</p>
            <p>right liquid</p>
            <p>right liquid</p>
            <p>right liquid</p>
            <p>right liquid</p>
            <p>right liquid</p>
            <p>right liquid</p>
            <p>right liquid</p>
            <p>right liquid</p>
            <p>right liquid</p>
            <p>right liquid</p>
            <p>right liquid</p>
            <p>right liquid</p>
            <p>right liquid</p>
            <p>right liquid</p>
            <p>right liquid</p>
            <p>right liquid</p>
            <p>right liquid</p>
            <p>right liquid</p>
            <p>right liquid</p>
            <p>right liquid</p>
            <p>right liquid</p>
        </div>
    </div>
    <div class="left">
            <p>left fixed</p>
            <p>left fixed</p>
            <p>left fixed</p>
            <p>left fixed</p>
            <p>left fixed</p>
            <p>left fixed</p>
            <p>left fixed</p>
            <p>left fixed</p>
            <p>left fixed</p>
            <p>left fixed</p>
            <p>left fixed</p>
            <p>left fixed</p>
            <p>left fixed</p>
            <p>left fixed</p>
    </div> 
    <div class="footer">
        footer
    </div>
</div>
</body>
</html>
